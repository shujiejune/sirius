---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const { pathname } = Astro.url;
const base = import.meta.env.BASE_URL;

// 1.Safe preparation of the href
const rawHref = href?.toString() ?? "";

// 2. Compute the internal href
// If rawHref is '/', internalHref becomes '/sirius/'
const internalHref = rawHref.startsWith("/") ? `${base}${rawHref}`.replace(/\/+/g, "/") : rawHref;

// 3. Strip trailing slashes for comparison
const normalize = (path: string) => path.replace(/\/+$/, "");

// 4. Robust Active Check
// Normalize both the current pathname and the target link before comparing
const isActive =
    // Exact match (e.g., Home page)
    normalize(pathname) === normalize(internalHref) ||
    // Sub-path match (e.g., Projects page), but excluding the root itself so Home doesn't light up everywhere
    (normalize(internalHref) !== normalize(base) && pathname.startsWith(internalHref));
---

<a
    href={internalHref}
    class:list={[
        className,
        "inline-block no-underline p-1 h-full transition-colors hover:text-skin-accent",
        {
            "text-skin-accent border-b-[3px] border-skin-accent -mb-px pb-[calc(var(--header-padding)+1px)]":
                isActive,
            "text-skin-base border-b-[3px] border-transparent -mb-px pb-[calc(var(--header-padding)+1px)]":
                !isActive,
        },
    ]}
    {...props}
>
    <slot />
</a>
<style>
    a {
        display: inline-block;
        text-decoration: none;
    }
    a.active {
        font-weight: bolder;
        text-decoration: underline;
    }
</style>
