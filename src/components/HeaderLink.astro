---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const { pathname } = Astro.url;

// Prepend the BASE_URL to the href for the actual link
const base = import.meta.env.BASE_URL;
const rawHref = href?.toString() ?? "";
const internalHref = rawHref.startsWith("/") ? `${base}${rawHref}`.replace(/\/+/g, "/") : rawHref;

const isActive =
    internalHref === pathname || (internalHref !== `${base}/` && pathname.startsWith(internalHref));
---

<a
    href={internalHref}
    class:list={[
        className,
        "inline-block no-underline p-1 h-full transition-colors hover:text-skin-accent",
        {
            "text-skin-accent border-b-[3px] border-skin-accent -mb-px pb-[calc(var(--header-padding)+1px)]":
                isActive,
            "text-skin-base border-b-[3px] border-transparent -mb-px pb-[calc(var(--header-padding)+1px)]":
                !isActive,
        },
    ]}
    {...props}
>
    <slot />
</a>
<style>
    a {
        display: inline-block;
        text-decoration: none;
    }
    a.active {
        font-weight: bolder;
        text-decoration: underline;
    }
</style>
